{
  "compilerOptions": {
    "allowJs": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "comp/*": ["./src/components/*"],
      "types/*": ["./src/ts/types/*"],
      "utils/*": ["./src/ts/utils/*"],
      "ts/*": ["./src/ts/*"],
      "styles/*": ["./src/styles/*"],
    },
    "target": "es2015",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
  },
  "include": [
    "./src/**/*",
  ]
}